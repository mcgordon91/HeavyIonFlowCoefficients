<?xml version="1.0" encoding="utf-8" ?>

<!-- Job parameters -->
<job maxFilesPerProcess="1" filesPerHour="1" fileListSyntax="paths">

  <!-- Task list -->
  <command>
    starver SL20d    
    VnFromInnerEPD-V3 $INPUTFILE0 $JOBID Normal
  </command>
    
  <ResourceUsage> 
    <Memory> 
        <MinMemory>2048</MinMemory> 
    </Memory> 
  </ResourceUsage> 


  <!-- Necessary files -->
  <SandBox installer="ZIP">
    <Package>
      <File>file:/star/u/mcgordon/TreeAnalysisMichael/VnFromInnerEPD-V3</File>
      <File>file:/star/u/mcgordon/TreeAnalysisMichael/FlowFunctions.h</File>
      <File>file:/star/u/mcgordon/TreeAnalysisMichael/DeuteronsAndTritons.h</File>
      <File>file:/star/u/mcgordon/TreeAnalysisMichael/TileVector.h</File>
      <File>file:/star/u/mcgordon/TreeAnalysisMichael/libs/</File>
    </Package>
  </SandBox>


  <!-- Get input files from get_file_lis.pl -->
  <input URL="filelist:/star/data01/pwg/mcgordon/Trees/file.list" nFiles="all"/>
  
  <!-- Run log & error messages -->
  <stdout URL="file:/star/data01/pwg/mcgordon/Logs/VnFromEPD/$JOBID.out" />
  <stderr URL="file:/star/data01/pwg/mcgordon/Logs/VnFromEPD/$JOBID.err" />
  <output fromScratch="*.root" toURL="file:/star/data01/pwg/mcgordon/Logs/VnFromEPD/"/>
  
</job>